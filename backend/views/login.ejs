<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Student Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function setTheme(theme) {
            const body = document.body;
            body.classList.remove('theme-glass', 'theme-dark');
            body.classList.add(theme);
            localStorage.setItem('sms_theme', theme); // Using a specific key for our app
            
            // Update active button state
            document.querySelectorAll('.theme-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.theme === theme) {
                    btn.classList.add('active');
                }
            });
        }

        // Listen for theme changes from other pages
        window.addEventListener('storage', (e) => {
            if (e.key === 'sms_theme') {
                setTheme(e.newValue);
            }
        });

        document.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('sms_theme') || 'theme-glass';
            setTheme(savedTheme);
        });
    </script>
    <style>
        /* Glass Theme (Current) */
        .theme-glass {
            background: linear-gradient(135deg, rgb(15, 23, 42) 0%, rgb(88, 28, 135) 50%, rgb(15, 23, 42) 100%);
            min-height: 100vh;
        }
        .theme-glass .login-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(16px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .theme-glass .text-theme-primary {
            color: white;
        }
        .theme-glass .text-theme-secondary {
            color: rgba(255, 255, 255, 0.7);
        }

        /* Dark Professional Theme */
        .theme-dark {
            background-color: #0f172a;
            min-height: 100vh;
        }
        .theme-dark .login-card {
            background-color: #1e293b;
            border: 1px solid #334155;
        }
        .theme-dark .text-theme-primary {
            color: #e2e8f0;
        }
        .theme-dark .text-theme-secondary {
            color: #94a3b8;
        }
        .theme-dark .button-primary {
            background: linear-gradient(135deg, #1e40af 0%, #3730a3 100%);
        }

        /* Theme Toggle */
        .theme-toggle {
            position: fixed;
            top: 1rem;
            left: 1rem;
            display: flex;
            gap: 0.5rem;
            background: rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(8px);
            padding: 0.25rem;
            border-radius: 9999px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            z-index: 50;
        }
        .theme-btn {
            width: 2rem;
            height: 2rem;
            border-radius: 9999px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: rgba(255, 255, 255, 0.8);
            transition: all 0.2s;
            cursor: pointer;
        }
        .theme-btn:hover {
            background: rgba(255, 255, 255, 0.1);
        }
        .theme-btn.active {
            background: rgba(255, 255, 255, 0.2);
            color: white;
        }

        /* Glass Theme Animations */
        @keyframes blob {
            0%, 100% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(30px, -50px) scale(1.1); }
            66% { transform: translate(-20px, 20px) scale(0.9); }
        }
        .animate-blob {
            animation: blob 7s infinite;
        }
        .animation-delay-2000 {
            animation-delay: 2s;
        }
        .animation-delay-4000 {
            animation-delay: 4s;
        }
    </style>
</head>
<body class="min-h-screen">
    <!-- Theme Toggle Buttons -->
    <div class="theme-toggle">
        <button class="theme-btn" data-theme="theme-glass" onclick="setTheme('theme-glass')" title="Glass Theme">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
        </button>
        <button class="theme-btn" data-theme="theme-dark" onclick="setTheme('theme-dark')" title="Dark Theme">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
            </svg>
        </button>
    </div>
    </script>
    <style>
        /* Glass Theme (Default) */
        .theme-glass {
            @apply min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900;
        }
        .theme-glass .login-card {
            @apply bg-white/10 backdrop-blur-xl border-white/20;
        }

        /* Dark Professional Theme */
        .theme-dark {
            @apply min-h-screen bg-gray-900;
        }
        .theme-dark .login-card {
            @apply bg-gray-800 border-gray-700;
        }
        .theme-dark .header-gradient {
            @apply from-gray-800 to-gray-900;
        }

        /* Light Professional Theme */
        .theme-light {
            @apply min-h-screen bg-gray-50;
        }
        .theme-light .login-card {
            @apply bg-white border-gray-200 shadow-xl;
        }
        .theme-light .header-gradient {
            @apply from-white to-gray-50;
        }
        .theme-light .text-theme {
            @apply text-gray-900;
        }
        
        /* Theme Toggle Button Styles */
        .theme-toggle {
            @apply fixed top-4 right-4 flex items-center space-x-2 bg-black/20 backdrop-blur-lg rounded-full p-1;
        }
        .theme-toggle button {
            @apply w-8 h-8 rounded-full flex items-center justify-center transition-all duration-200;
        }
        .theme-toggle button.active {
            @apply bg-white/20;
        }
    </style>
</head>
<body class="theme-glass">
    <!-- Animated background -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
        <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-indigo-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
        <div class="absolute top-1/2 left-1/2 w-80 h-80 bg-pink-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
    </div>

    <style>
        @keyframes blob {
            0%, 100% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(30px, -50px) scale(1.1); }
            66% { transform: translate(-20px, 20px) scale(0.9); }
        }
        .animate-blob {
            animation: blob 7s infinite;
