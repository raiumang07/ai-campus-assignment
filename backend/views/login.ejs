                    <!-- <p class="text-center text-sm text-gray-400"> -->
                        <!-- For testing: Use the register API endpoint to create a user -->
                    <!-- </p> -->
                <!-- </div> -->
            </div>

            <!-- Test Credentials Box -->
            <div class="mt-6 p-4 bg-white/5 border border-white/10 rounded-xl">
                <p class="text-medium text-gray-400 text-center mb-2">Test Credentials</p>
                <div class="space-y-1">
                    <p class="text-medium text-center">
                        <span class="text-gray-400">Username:</span> 
