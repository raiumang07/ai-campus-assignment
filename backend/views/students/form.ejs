<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= (typeof student !== 'undefined' && student._id) ? 'Edit' : 'Add' %> Student - Student Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
    <!-- Navigation Header -->
    <header class="sticky top-0 z-50 backdrop-blur-xl bg-slate-900/80 border-b border-white/10 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <!-- Logo & Title -->
                <div class="flex items-center space-x-3">
                    <div class="flex items-center justify-center w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl shadow-lg">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-lg font-bold text-white">Student Management</h1>
                        <p class="text-xs text-gray-400">Shipsy Assignment</p>
                    </div>
                </div>

                <!-- Navigation Link -->
                <div class="flex items-center space-x-4">
                    <a href="/students" class="flex items-center px-4 py-2 text-sm font-medium text-gray-300 hover:text-white bg-white/5 hover:bg-white/10 rounded-lg transition-all duration-200 border border-white/10">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </header>

    <main class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Page Header -->
        <div class="mb-8">
            <div class="flex items-center space-x-3 mb-3">
                <div class="flex items-center justify-center w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <% if (typeof student !== 'undefined' && student._id) { %>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        <% } else { %>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        <% } %>
                    </svg>
                </div>
                <div>
                    <h2 class="text-3xl font-bold text-white">
                        <%= (typeof student !== 'undefined' && student._id) ? 'Edit Student' : 'Add New Student' %>
                    </h2>
                    <p class="text-gray-400 mt-1">
                        <%= (typeof student !== 'undefined' && student._id) ? 'Update student information below' : 'Fill in the details to add a new student' %>
                    </p>
                </div>
            </div>
        </div>

        <!-- Form Card -->
        <div class="bg-white/5 backdrop-blur-xl rounded-2xl border border-white/10 shadow-xl p-8">
            <form action="<%= (typeof student !== 'undefined' && student._id) ? '/students/edit/' + student._id : '/students/add' %>" method="POST" class="space-y-6">
                
                <!-- Personal Information Section -->
                <div>
                    <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Personal Information
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Name -->
                        <div class="md:col-span-2">
                            <label for="name" class="block text-sm font-semibold text-gray-200 mb-2">
                                Full Name <span class="text-red-400">*</span>
                            </label>
                            <input 
                                type="text" 
                                id="name" 
                                name="name" 
                                value="<%= (typeof student !== 'undefined') ? student.name : '' %>" 
                                required 
                                class="block w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200"
                                placeholder="Enter student's full name"
                            >
                            <p class="mt-2 text-xs text-gray-400">Enter the complete name of the student</p>
                        </div>

                        <!-- Branch -->
                        <div>
                            <label for="branch" class="block text-sm font-semibold text-gray-200 mb-2">
                                Branch <span class="text-red-400">*</span>
                            </label>
                            <select 
                                id="branch" 
                                name="branch" 
                                required 
                                class="block w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 appearance-none"
                            >
                                <option value="" class="bg-slate-800">Select a branch</option>
                                <% ['CSE', 'IT', 'ECE', 'ME', 'CE'].forEach(function(b){ %>
                                    <option value="<%= b %>" class="bg-slate-800" <%= ((typeof student !== 'undefined') && student.branch === b) ? 'selected' : '' %>>
                                        <%= b %> - <%= 
                                            b === 'CSE' ? 'Computer Science Engineering' :
                                            b === 'IT' ? 'Information Technology' :
                                            b === 'ECE' ? 'Electronics & Communication' :
                                            b === 'ME' ? 'Mechanical Engineering' :
                                            'Civil Engineering'
                                        %>
                                    </option>
                                <% }) %>
                            </select>
                            <p class="mt-2 text-xs text-gray-400">Select the student's academic branch</p>
                        </div>

                        <!-- Hosteller Status -->
                        <div class="flex items-start pt-8">
                            <div class="flex items-center h-5">
                                <input 
                                    type="checkbox" 
                                    id="isHosteller" 
                                    name="isHosteller" 
                                    class="w-5 h-5 text-indigo-600 bg-white/5 border-white/10 rounded focus:ring-2 focus:ring-indigo-500 transition-all cursor-pointer"
                                    <%= (typeof student !== 'undefined' && student.isHosteller) ? 'checked' : '' %>
                                >
                            </div>
                            <div class="ml-3">
                                <label for="isHosteller" class="text-sm font-semibold text-gray-200 cursor-pointer">
                                    Hosteller
                                </label>
                                <p class="text-xs text-gray-400 mt-1">Check if the student lives in hostel</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Divider -->
                <div class="border-t border-white/10"></div>

                <!-- Academic Performance Section -->
                <div>
                    <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                        </svg>
                        Academic Performance
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- CGPA -->
                        <div>
                            <label for="cgpa" class="block text-sm font-semibold text-gray-200 mb-2">
                                CGPA <span class="text-red-400">*</span>
                            </label>
                            <div class="relative">
                                <input 
                                    type="number" 
                                    id="cgpa" 
                                    name="cgpa" 
                                    step="0.01" 
                                    min="0" 
                                    max="10" 
                                    value="<%= (typeof student !== 'undefined') ? student.cgpa : '' %>" 
                                    required 
                                    class="block w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200"
                                    placeholder="0.00"
                                    oninput="calculatePercentages()"
                                >
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <span class="text-gray-400 text-sm">/ 10</span>
                                </div>
                            </div>
                            <p class="mt-2 text-xs text-gray-400">Enter CGPA on a scale of 0 to 10</p>
                            <div id="cgpaPercentageDisplay" class="mt-2 text-sm font-medium text-indigo-300"></div>
                        </div>

                        <!-- Attendance -->
                        <div>
                            <label for="attendance" class="block text-sm font-semibold text-gray-200 mb-2">
                                Attendance <span class="text-red-400">*</span>
                            </label>
                            <div class="relative">
                                <input 
                                    type="number" 
                                    id="attendance" 
                                    name="attendance" 
                                    step="1" 
                                    min="0" 
                                    max="100" 
                                    value="<%= (typeof student !== 'undefined') ? student.attendance : '' %>" 
                                    required 
                                    class="block w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200"
                                    placeholder="0"
                                    oninput="calculatePercentages()"
                                >
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                    <span class="text-gray-400 text-sm">%</span>
                                </div>
                            </div>
                            <p class="mt-2 text-xs text-gray-400">Enter attendance percentage (0-100)</p>
                        </div>

                        <!-- Overall Percentage Preview -->
                        <div class="md:col-span-2 bg-indigo-500/10 border border-indigo-500/30 rounded-xl p-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-semibold text-gray-200 mb-1">Overall Performance Score</p>
                                    <p class="text-xs text-gray-400">Calculated as: (70% × CGPA%) + (30% × Attendance)</p>
                                </div>
                                <div id="overallPercentageDisplay" class="text-2xl font-bold text-indigo-300">
                                    ---%
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="flex flex-col sm:flex-row items-center justify-end gap-3 pt-6 border-t border-white/10">
                    <a 
                        href="/students" 
                        class="w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 text-sm font-medium text-gray-300 bg-white/5 hover:bg-white/10 rounded-xl transition-all duration-200 border border-white/10"
                    >
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Cancel
                    </a>
                    <button 
                        type="submit" 
                        class="w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-semibold rounded-xl shadow-lg transform transition-all duration-200 hover:scale-105"
                    >
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <%= (typeof student !== 'undefined' && student._id) ? 'Update Student' : 'Add Student' %>
                    </button>
                </div>
            </form>
        </div>

        <!-- Information Card -->
        <div class="mt-6 bg-blue-500/10 border border-blue-500/30 rounded-xl p-4">
            <div class="flex">
                <svg class="w-5 h-5 text-blue-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                </svg>
                <div>
                    <h4 class="text-sm font-semibold text-blue-300 mb-1">Calculation Information</h4>
                    <p class="text-xs text-blue-200/80">
                        • CGPA Percentage is automatically calculated as: (CGPA / 10) × 100<br>
                        • Overall Performance Score combines both academic and attendance metrics<br>
                        • All fields marked with <span class="text-red-400">*</span> are required
                    </p>
                </div>
            </div>
        </div>
    </main>

    <!-- JavaScript for real-time calculation -->
    <script>
        function calculatePercentages() {
            const cgpa = parseFloat(document.getElementById('cgpa').value) || 0;
            const attendance = parseFloat(document.getElementById('attendance').value) || 0;
            
            // Calculate CGPA Percentage
            const cgpaPercentage = (cgpa / 10) * 100;
            
            // Calculate Overall Percentage
            const overallPercentage = (0.7 * cgpaPercentage) + (0.3 * attendance);
            
            // Display CGPA Percentage
            if (cgpa > 0) {
                document.getElementById('cgpaPercentageDisplay').textContent = `CGPA Percentage: ${cgpaPercentage.toFixed(2)}%`;
            } else {
                document.getElementById('cgpaPercentageDisplay').textContent = '';
            }
            
            // Display Overall Percentage
            if (cgpa > 0 || attendance > 0) {
                const display = document.getElementById('overallPercentageDisplay');
                display.textContent = `${overallPercentage.toFixed(2)}%`;
                
                // Color coding based on performance
                if (overallPercentage >= 85) {
                    display.className = 'text-2xl font-bold text-green-300';
                } else if (overallPercentage >= 70) {
                    display.className = 'text-2xl font-bold text-blue-300';
                } else if (overallPercentage >= 60) {
                    display.className = 'text-2xl font-bold text-yellow-300';
                } else {
                    display.className = 'text-2xl font-bold text-red-300';
                }
            } else {
                document.getElementById('overallPercentageDisplay').textContent = '---%';
                document.getElementById('overallPercentageDisplay').className = 'text-2xl font-bold text-indigo-300';
            }
        }
        
        // Calculate on page load if editing
        window.addEventListener('DOMContentLoaded', function() {
            calculatePercentages();
        });
    </script>

    <!-- Footer -->
    <footer class="mt-12 pb-8">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="border-t border-white/10 pt-8">
                <p class="text-center text-sm text-gray-400">
                    © 2024 Student Management System. Built for Shipsy Assignment.
                </p>
            </div>
        </div>
    </footer>
</body>
</html>