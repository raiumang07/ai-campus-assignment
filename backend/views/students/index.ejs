<div class="max-w-7xl mx-auto">
    <div class="p-8 bg-gray-800 rounded-lg shadow-lg">
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-2xl font-bold text-white">Student Dashboard</h1>
            <a href="/students/add" class="px-4 py-2 font-medium text-sm text-white bg-indigo-600 rounded-md hover:bg-indigo-700">Add New Student</a>
        </div>

        <!-- Filter and Search Form -->
        <form action="/students" method="GET" class="mb-6">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
                <input type="text" name="name" placeholder="Search by name..." class="w-full px-3 py-2 text-white bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" value="<%= locals.filters && filters.name ? filters.name : '' %>">
                <select name="branch" class="w-full px-3 py-2 text-white bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    <option value="">Filter by Branch</option>
                    <% const branches = ['CSE', 'IT', 'ECE', 'ME', 'CE']; %>
                    <% branches.forEach(branch => { %>
                        <option value="<%= branch %>" <%= (locals.filters && filters.branch === branch) ? 'selected' : '' %>><%= branch %></option>
                    <% }); %>
                </select>
                <button type="submit" class="w-full px-4 py-2 font-medium text-white bg-gray-600 rounded-md hover:bg-gray-500">Apply Filters</button>
            </div>
        </form>

        <div class="overflow-x-auto rounded-lg border border-gray-700">
            <table class="min-w-full divide-y divide-gray-700">
                <thead class="bg-gray-900">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider"><a href="?sortBy=name" class="hover:text-white">Name</a></th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider"><a href="?sortBy=branch" class="hover:text-white">Branch</a></th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Hosteller</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider"><a href="?sortBy=-cgpa" class="hover:text-white">CGPA</a></th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">CGPA %</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider"><a href="?sortBy=-overallPercentage" class="hover:text-white">Overall %</a></th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-gray-800 divide-y divide-gray-700">
                    <% students.forEach(student => { %>
                        <tr class="hover:bg-gray-700/50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white"><%= student.name %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= student.branch %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= student.isHosteller ? 'Yes' : 'No' %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= student.cgpa %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= (typeof student.cgpaPercentage !== 'undefined' && student.cgpaPercentage !== null) ? student.cgpaPercentage.toFixed(2) + '%' : 'N/A' %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-white"><%= (typeof student.overallPercentage !== 'undefined' && student.overallPercentage !== null) ? student.overallPercentage.toFixed(2) + '%' : 'N/A' %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                                <a href="/students/edit/<%= student._id %>" class="text-yellow-400 hover:text-yellow-300">Edit</a>
                                <form action="/students/delete/<%= student._id %>" method="POST" class="inline-block">
                                    <button type="submit" class="text-red-500 hover:text-red-400">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="flex items-center justify-between mt-6">
            <div class="text-sm text-gray-400">
                Page <%= currentPage %> of <%= totalPages %>
            </div>
            <div class="flex">
                <% if (currentPage > 1) { %>
                    <a href="?page=<%= currentPage - 1 %>&branch=<%= filters.branch || '' %>&name=<%= filters.name || '' %>" class="px-4 py-2 mx-1 text-sm text-gray-300 bg-gray-700 border border-gray-600 rounded-md hover:bg-gray-600">Previous</a>
                <% } %>
                <% if (currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %>&branch=<%= filters.branch || '' %>&name=<%= filters.name || '' %>" class="px-4 py-2 mx-1 text-sm text-gray-300 bg-gray-700 border border-gray-600 rounded-md hover:bg-gray-600">Next</a>
                <% } %>
            </div>
        </div>
    </div>
</div>